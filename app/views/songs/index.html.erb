<h2>All Songs</h2>
<%= search_form_for @q do |f| %>
      <p>
        <%= f.label 'search' %>
        <%= f.text_field :name_cont %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
<table>

<% @songs.each do |song| %>
  <ul class="song_div song_index">
    <li><div class="user_pic"><%= image_tag(song.user.user_image) %></div></li>
    <li class="song_name"><%= link_to song.name, song %></li>  
    <li class="index_name"><p><%= song.user.name %></p></li>  
    <li>
      <% if can? :manage, @song %>
      <%= link_to 'Edit', edit_song_path(song) %>
      <% end %>
    </li>
    <li>
      <% if can? :manage, @song %>
      <%= link_to 'Delete Song', song, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  </ul>
<% end %>
</table>

<br />

