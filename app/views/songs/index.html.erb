<h1>Listing songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Genre</th>
    <th>User</th>
    <th>File</th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= link_to song.name, song %></td>
    <td><%= song.genre %></td>
    <td><%= song.user.name %></td>
    <td>
    <% if can? :manage, @song %>
      <%= link_to 'Edit', edit_song_path(song) %>
      <% end %>
    </td>

    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

