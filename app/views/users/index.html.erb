<h2>All Artists</h2>

<%= search_form_for @q do |f| %>
      <p>
        <%= f.label 'Search Artists' %>
        <%= f.text_field :name_cont %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>

<table>
  <tr>
    <th></th>
    <th>Artist</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><div class="user_pic"><%= image_tag(user.user_image.thumb.url) %>
    </div></td>
    <td><%= link_to user.name, user %></td>  
    <td>
      <% if can? :manage, @user %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <% end %>
    </td>
    <td>
      <% if can? :manage, @user %>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
