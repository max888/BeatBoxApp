<h2>All Artists</h2>

<%= search_form_for @q do |f| %>
      <p>
        <%= f.label 'Search Artists' %>
        <%= f.text_field :name_cont %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>

<table>
  <tr>
    <th></th>
    <th>Artist</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <ul>
    <li><div class="user_pic"><%= image_tag(user.user_image.thumb.url) %>
    </div></li>
    <li><%= link_to user.name, user %></li>  
    <li>
      <% if can? :manage, @user %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <% end %>
    </li>
    <li>
      <% if can? :manage, @user %>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  </ul>
<% end %>
</table>

<br />
