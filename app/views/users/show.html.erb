<p id="notice"><%= notice %></p>

<div id= "profile_title">
  <%= @user.name %>
</div>


<div id= "banner_pic">
  <%= link_to image_tag(@user.banner_image.thumb.url), @user.banner_image.detail.url %>
</div>


<div class= "user_pic profile">
    <%= link_to image_tag(@user.user_image.thumb.url), @user.user_image.detail.url %>
</div>

<div id="bio">
<p>
  <%= @user.bio %>
</p>
</div>


<h2><div id= "song_title">Songs: </div></h2><br>
  <div id="profile_song">
      <% @user.songs.each do |song| %>
      <%= link_to song.name, song_path(song) %><br>
      <% end %>
 </div>



<div class= "profile_nav">
  <% if can? :manage, @user %>
    <%= link_to 'Add Song', new_song_path %>
  <% end %>

  <% if can? :manage, @user %>
    <%= link_to 'Edit Profile', edit_user_path(@user) %> 
  <% end %>

  <%= link_to 'Back', users_path %>

</div>
