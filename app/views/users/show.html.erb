<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Bio:</b>
  <%= @user.bio %>
</p>

<p>
  <b>User image:</b>
  <%= link_to image_tag(@user.user_image.thumb.url), @user.user_image.detail.url %>
</p>

<p>
  <b>Banner image:</b>
  <%= link_to image_tag(@user.banner_image.thumb.url), @user.banner_image.detail.url %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Songs: </b><br>
  <% @user.songs.each do |song| %>
  <%= link_to song.name, song_path(song) %>
</p>
  <% end %>



<% if can? :manage, @user %>
<%= link_to 'Add Song', new_song_path %>
<% end %>

<% if can? :manage, @user %>
<%= link_to 'Edit Profile', edit_user_path(@user) %> 
<% end %>

<%= link_to 'Back', users_path %>
